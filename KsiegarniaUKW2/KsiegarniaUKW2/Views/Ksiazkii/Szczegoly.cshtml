@model KsiegarniaUKW2.Models.Ksiazka
@using KsiegarniaUKW2.Struktura


@{
    ViewBag.Title = "Szczegoly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ListaKategoriZawartosc">
    @Html.Action("KategorieMenu")
    <div id="KategorieListPrawaSekcja">
        <div id="Breadcrumb">
            <img src="../Content/Images/dommaly.png" />
            <a href="link">
                Start > Naukwe
            </a>
        </div>
        <section id="SekcjaKurs">
            <div id="KursLewa">
                <img src="@Url.ObrazkiSciezka(Model.NazwaPlikuOkladki)" />
            </div>
            <div id="KursPrawa">
                <div id="KursNazwa">
                    <h1>
                        @Model.Tytulksiazki
                    </h1>
                    <h2>
                        @Model.AutorKsiazki
                    </h2>
                </div>
                <div id="KursCena">
                    <div>
                        @Model.CenaKsiazki<span>PLN</span>
                    </div>
                    <a href="@Url.Action("DodajDoKoszyka", "Koszyk", new { id = Model.KsiazkaId } )"></a>
                </div>
                <div id="KursOpis">
                   @Model.OpisKsiazki
                </div>
                <div id="KursInfo">
                   @Model.OpisS
                </div>

            </div>
        </section>
    </div>
</div>